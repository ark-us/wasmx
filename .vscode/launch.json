    "version": "0.2.0",
    "configurations": [
    {
        "name": "mythos-Attach to Process",
        "type": "go",
        "request": "attach",
        "mode": "local",
        "processId":"${command:pickProcess}"
        // "processName":"mythosd"
    },
        {
            "name": "mythos",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            // "args": ["-test.timeout", "30m", "-test.v"],
            "args": ["start"],
            // "buildFlags": "-tags e2e",
            "env": {
                "GOROOT": "/usr/local/go",
                "GOPATH": "/Users/user/go",
            }
        }
    ]
}
